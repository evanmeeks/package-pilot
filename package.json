{
  "name": "package-pilot",
  "displayName": "Package Pilot",
  "description": "Package Pilot analyzes your projects to recommend better, more secure, and more efficient packages. Stop manually researching alternatives - let Package Pilot actively recommend the perfect libraries!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Package Pilot",
      "properties": {
        "packagePilot.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for enhanced package recommendations"
        }
      }
    },
    "commands": [
      {
        "command": "packagePilot.analyzeCurrentFile",
        "title": "Package Pilot: Analyze File"
      },
      {
        "command": "packagePilot.analyzeFolder",
        "title": "Package Pilot: Analyze Folder"
      },
      {
        "command": "packagePilot.analyzeProject",
        "title": "Package Pilot: Analyze Project"
      },
      {
        "command": "packagePilot.analyzePickedFiles",
        "title": "Package Pilot: Pick Files to Analyze"
      },
      {
        "command": "packagePilot.analyzeSelectedFiles",
        "title": "Package Pilot: Analyze Selected Files or Folders"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "packagePilot.analyzeCurrentFile",
          "when": "resourceExtname =~ /\\.(js|jsx|ts|tsx)$/ && !explorerResourceIsFolder",
          "group": "7_modification"
        },
        {
          "command": "packagePilot.analyzeFolder",
          "when": "explorerResourceIsFolder",
          "group": "7_modification"
        },
        {
          "command": "packagePilot.analyzeSelectedFiles",
          "when": "explorerResourceSelected",
          "group": "7_modification"
        }
      ],
      "editor/context": [
        {
          "command": "packagePilot.analyzeCurrentFile",
          "when": "editorLangId =~ /(javascript|typescript|javascriptreact|typescriptreact)/",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "packagePilot.analyzeCurrentFile",
          "when": "editorLangId =~ /(javascript|typescript|javascriptreact|typescriptreact)/"
        },
        {
          "command": "packagePilot.analyzeFolder",
          "when": "false"
        },
        {
          "command": "packagePilot.analyzePickedFiles"
        },
        {
          "command": "packagePilot.analyzeProject"
        },
        {
          "command": "packagePilot.analyzeSelectedFiles",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "axios": "^1.8.3"
  }
}